#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,physical-layout = &default_layout;
        zmk,underglow = &led_strip;
    };

    default_layout: default_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        transform = <&default_transform>;
        kscan = <&kscan0>;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <3>;
        map = <
	        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,10) RC(0,9) RC(0,8) RC(0,7) RC(0,6)
	        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6)
	        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)     RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(2,6)
						            RC(1,5) RC(2,5)     RC(2,11)
        >;
    };

    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios
            = <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // 0
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // 1
            , <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // 2
            , <&pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // not used
            ;

        col-gpios
            = <&pro_micro 21 GPIO_ACTIVE_HIGH> // 0, 6
            , <&pro_micro 20 GPIO_ACTIVE_HIGH> // 1, 7
            , <&pro_micro 19 GPIO_ACTIVE_HIGH> // 2, 8
            , <&pro_micro 18 GPIO_ACTIVE_HIGH> // 3, 9
            , <&pro_micro 15 GPIO_ACTIVE_HIGH> // 4, 10
            , <&pro_micro 14 GPIO_ACTIVE_HIGH> // 5, 11
            , <&pro_micro 16 GPIO_ACTIVE_HIGH> // not used
        ;
    };

    split_inputs {
		#address-cells = <1>;
		#size-cells = <0>;

		trackball_split: trackball_split@0 {
			compatible = "zmk,input-split";
			reg = <0>;
		};
	};

    trackball_listener: trackball_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&trackball_split>;
    };
};